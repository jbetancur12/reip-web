---
const { title, description, img, alt } = Astro.props;

interface Props {
  class?: string;
  title?: string;
  description?: string;
  img: string;
  alt: string;
}
---

<div
  class={`
${Astro.props.class}
relative
rounded-xl
backdrop-blur-md
border
border-black/10
shadow-inner
shadow-white/10
col-span-3
`}
>
  <div class="flex flex-col gap-1 p-6 text-lg z-20">
    <img
      src={img}
      alt={alt}
      class="rounded-2xl max-w-[250px] w-full m-auto mb-4"
      srcset=""
    />
    <h2 class="text-2xl text-balance mb-4">{title}</h2>
    <p>{description}</p>
  </div>
</div>
